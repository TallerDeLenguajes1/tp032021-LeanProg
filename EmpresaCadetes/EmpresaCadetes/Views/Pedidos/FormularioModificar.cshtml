@model EmpresaCadetes.Entidades.Pedidos
<form asp-action="UpdatePedidos" asp-controller="Pedidos" method="post">
     <div hidden class="form-group">
        <input hidden required type="number" name="idpedido" class="form-control" id="numero" value=@Model.Numero>
    </div>

    <div class="form-group">
        <label for="formGroupExampleInput">Detalle del Pedido</label>
        <input required type="text" name="Obs" class="form-control" id="Nomb" placeholder=@Model.Observacion>
    </div>

    <div class="form-group">
        <label for="formGroupExampleInput2">Nombre del cliente</label>
        <input  required type="text" name="nombrec" class="form-control" id="dire" placeholder=@Model.NewCliente.Nombre>
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Direccion del cliente exacta</label>
        <input type="text" name="direc" class="form-control" id="dire" placeholder=@Model.NewCliente.Direccion>
    </div>

    <div class="form-group">
        <label for="formGroupExampleInput2">Telefono del cliente</label>
        <input type="text" name="telefonoc" class="form-control" id="Fing" placeholder=@Model.NewCliente.Telefono>
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Estado del pedido</label>
       @* <input required type="text" name="estado" class="form-control" id="Fing" placeholder="CARGADO" value="CARGADO" readonly>*@
        <select class=text name="estado">
                <option selected value="CARGADO" > CARGADO </option>  
                <option value="ENVIADO" > ENVIADO </option>
                <option value="ENTREGADO"> ENTREGADO </option>
        </select>
    </div>

    <input type="submit" name="btn" value="Cargar Pedido" />
</form>