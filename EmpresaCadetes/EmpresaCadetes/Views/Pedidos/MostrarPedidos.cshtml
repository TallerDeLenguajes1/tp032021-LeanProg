@{
}
@model List<EmpresaCadetes.Entidades.Pedidos>

<div class="text-center">
    <h1 class="display-4">LISTAS DE PEDIDOS</h1>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h3>Nro</h3>
            </div>
            <div class="col-sm">
                <h3>Detalle</h3>
            </div>
            <div class="col-sm">
                <h3>Cliente</h3>
            </div>
            <div class="col-sm">
                <h3>Estado</h3>
            </div>

        </div>
    </div>


    @foreach (var item in Model)
    {

        <div class="row">
            <div class="col" title="id">
                @item.Numero
            </div>
            <div class="col" title="Nombre">
                @item.Observacion

            </div>
            <div class="col" title="Direccion">
                @item.NewCliente.Nombre

            </div>
            <div class="col" title="Telefeno">
                @item.Estado

            </div>
        </div>
    }

</div>
