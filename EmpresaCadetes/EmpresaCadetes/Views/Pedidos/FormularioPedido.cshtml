@model EmpresaCadetes.ViewModels.PedidosAltaViewModel
@await Html.PartialAsync("_NavAdminPartial",Model.Usuario)

<form asp-action="FormularioPedido" asp-controller="Pedidos" method="post">
   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Observacion" for="formGroupExampleInput">Detalle del Pedido</label>
        <input required asp-for="Observacion" name="Observacion" class="form-control" id="observacion" /> 
         <span asp-validation-for="Observacion" class="text-danger" />
    </div>

    <div class="form-group">
        <label asp-for="NewCliente.Nombre" class="control-label" for="formGroupExampleInput2">Nombre del cliente</label>
        <input asp-for="NewCliente.Nombre"  class="form-control" required />
         <span asp-validation-for="NewCliente.Nombre" class="text-danger" /> 
    </div>
    <div class="form-group">
        <label asp-for="NewCliente.Direccion" class="control-label" for="formGroupExampleInput2">Direccion del cliente exacta</label>
        <input asp-for="NewCliente.Direccion"  class="form-control" required />
         <span asp-validation-for="NewCliente.Direccion" class="text-danger" /> 
         
    </div>

    <div class="form-group">
        <label asp-for="NewCliente.Telefono" for="formGroupExampleInput2" class="control-label">Telefono del cliente</label>
        <input asp-for="NewCliente.Telefono"  class="form-control" />
         <span asp-validation-for="NewCliente.Telefono" class="text-danger" /> 
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Estado del pedido</label>
       <select class=text asp-for="Estado" name="Estado">
                <option selected value="CARGADO" > CARGADO </option>  
                <option value="ENVIADO" > ENVIADO </option>
                <option value="ENTREGADO"> ENTREGADO </option>
        </select>
         <span asp-validation-for="Estado" class="text-danger" />  
    </div>

    <input type="submit" name="btn" value="Cargar Pedido" />
</form>